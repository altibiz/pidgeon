{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug CLI",
      "cargo": {
        "args": ["build", "--bin", "pidgeon-cli"]
      },
      "cwd": "${workspaceFolder}/src/cli",
      "args": ["--config", "config.toml"],
      "postRunCommands": ["process handle SIGPIPE -n true -p true -s false"]
    }
  ]
}
